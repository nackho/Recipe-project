<div class="d-flex mb-2 align-items-center">
    <h2>All Recipes</h2>
    <a href="/" class="ms-auto">Go Back</a>
</div>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

    <% if(recipes != '') { %>
        <% recipes.forEach(function(recipe, index){ %>
    <a href="/recipes/<%= recipe._id %>" class="col text-center recipe__tab">
        <div class="recipe__img_all shadow">
            <img src="/uploads/<%- recipe.image %>">
        </div>
        <div class="pt-1"><%= recipe._title %></div>
    </a>
    <% }) %>
        <% } %>

</div>